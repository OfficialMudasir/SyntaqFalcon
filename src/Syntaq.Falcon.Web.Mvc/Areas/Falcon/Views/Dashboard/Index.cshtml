<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">

    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title p-2">
                    <span>@L("Dashboard")</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <span class="kt-subheader__desc">
                    @L("DashboardHeaderInfo")
                </span>
            </div>
            <div class="kt-subheader__toolbar">
                <div class="kt-subheader__wrapper d-none">
                    <button id="SubmissionModalButton" class="btn btn-primary" style="position: absolute; opacity: 0;"></button>
                    <button name="RefreshButton" class="btn btn-primary">
                        <i class="fa fa-sync"></i>
                        <span class="d-none d-sm-inline-block">
                            @L("Refresh")
                        </span>
                    </button>
                    <a href="#" class="btn btn-primary dashboard-report-range">
                        <i class="la la-calendar" aria-label="@L(" Expand")"></i>
                        <span class="d-none d-sm-inline-block">
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">
        <!-- begin:: Content -->
        <div class="@(await GetContainerClass()) kt-container--fluid  kt-grid__item kt-grid__item--fluid">
            <!--Begin::Dashboard 6-->
            <!--Begin::Row ProjectDashbord-->
            <ul class="nav nav-pills mb-3" id="dashboard-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="default-dashboard-tab" data-bs-toggle="pill" href="#default-dashboard" role="tab" aria-controls="default-dashboard" aria-selected="true">Dashboard</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="project-dashboard-tab" data-bs-toggle="pill" href="#project-dashboard" role="tab" aria-controls="project-dashboard" aria-selected="false">Project</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="contributor-dashboard-tab" data-bs-toggle="pill" href="#contributor-dashboard" role="tab" aria-controls="contributor-dashboard" aria-selected="false">Contributor</a>
                </li>
            </ul>
            <div class="tab-content" id="dashboard-tabContent">
                <!--Begin::default dashboard-->
                <div class="tab-pane fade show active" id="default-dashboard" role="tabpanel" aria-labelledby="default-dashboard-tab">
                    <!--Begin::Row-->
                    <div class="row">
                        <div class="kt-portlet kt-portlet--height-fluid">
                            <div class="kt-portlet__body kt-portlet__body--fit">
                                <div class="row row-no-padding row-col-separator-xl">

                                    <div class="col-md-12 col-lg-6 col-xl-4">
                                        <div class="kt-widget24">
                                            <div class="kt-widget24__details">
                                                <div class="kt-widget24__info">
                                                    <h4 class="kt-widget24__title">
                                                        Submission Limit
                                                    </h4>
                                                    <span class="kt-widget24__desc">
                                                        Total Submissions this month
                                                    </span>
                                                </div>
                                                <span class="kt-widget24__stats kt--font-brand">
                                                    <span class="counterup submissionLimit">...</span>
                                                </span>
                                            </div>
                                            <div class="progress progress--sm">
                                                <div class="progress-bar kt-bg-brand" role="progressbar" style="width: 0.5%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            <div class="kt-widget24__action">
                                                <span class="kt-widget24__change">
                                                    <span class="currentSubmissions">...</span> of <span class="submissionLimit">...</span>
                                                </span>
                                                <span class="kt-widget24__number">
                                                    <span class="submissionUsagePercent">...</span>%
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-lg-6 col-xl-4">
                                        <div class="kt-widget24">
                                            <div class="kt-widget24__details">
                                                <div class="kt-widget24__info">
                                                    <h4 class="kt-widget24__title">
                                                        Today's Submissions
                                                    </h4>
                                                    <span class="kt-widget24__desc">
                                                        Total Submissions created today
                                                    </span>
                                                </div>
                                                <span class="kt-widget24__stats kt--font-warning">
                                                    <span class="counterup todaysSubmissions">...</span>
                                                </span>
                                            </div>
                                            <div class="progress progress--sm">
                                                <div class="progress-bar kt-bg-warning" role="progressbar" style="width: 0.5%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            <div class="kt-widget24__action">
                                                <span class="kt-widget24__change">
                                                    Change
                                                </span>
                                                <span class="kt-widget24__number">
                                                    <span class="submissionChangePercent">...</span>%
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-lg-6 col-xl-4">
                                        <div class="kt-widget24">
                                            <div class="kt-widget24__details">
                                                <div class="kt-widget24__info">
                                                    <h4 class="kt-widget24__title">
                                                        New Users
                                                    </h4>
                                                    <span class="kt-widget24__desc">
                                                        Recently Joined Users
                                                    </span>
                                                </div>
                                                <span class="kt-widget24__stats kt-font-success counterup" id="newUsers">
                                                    ...
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--End::Row-->
                    <!--Begin::Row-->
                    <div class="row">

                        <div class="kt-portlet kt-portlet--height-fluid">
                            <div class="kt-portlet__body kt-portlet__body--fit">
                                <div class="row row-no-padding row-col-separator-xl">
                                    <div class="col-xl-12">
                                        <!--begin:: Widgets/Sale Reports-->
                                        <div class="kt-portlet kt-portlet--tabs kt-portlet--height-fluid">
                                            <div class="kt-portlet__head">
                                                <div class="kt-portlet__head-label">
                                                    <h3 class="kt-portlet__head-title">
                                                        Most Recent Submissions
                                                    </h3>
                                                </div>
                                            </div>
                                            <div class="kt-portlet__body">
                                                <div class="tab-content">
                                                    <div class="tab-pane active" id="kt_widget4_tab11_content">
                                                        <div class="kt-scroll ps ps--active-y" data-scroll="true" data-height="400" style="height: 400px; overflow: hidden;">
                                                            <div class="kt-list-timeline">
                                                                <div class="kt-list-timeline__items">
                                                                </div>
                                                            </div>
                                                            <div class="ps__rail-x" style="left: 0px; bottom: 0px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 0px; height: 400px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 284px;"></div></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!--end:: Widgets/Sale Reports-->
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!--End::Row-->
                        <!--End::Dashboard 6-->
                    </div>
                    <!--End::Row-->
                </div>
                <!--End::default dashboard-->
                <!--Begin::project dashboard-->
                <div class="tab-pane fade" id="project-dashboard" role="tabpanel" aria-labelledby="project-dashboard-tab">
                    <div class="row">
                        <div class="col-8 col-auto" id="projectDashbordContainerId" style="margin-right: 0.3em;">
                            <div id="projectStatusContainerId" class="row">
                                <div class="kt-portlet kt-portlet--tabs kt-portlet--height-fluid">
                                    <div class="kt-portlet__head" style="max-height: 20px;">
                                        <div class="kt-portlet__head-label">
                                            <h3 id="" class="kt-portlet__head-title">Project Status</h3>
                                        </div>
                                    </div>
                                    <div class="kt-portlet__body kt-portlet__body--fit">
                                        <div id="projectStatusAppendedId" class="row row-no-padding">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-3 kt-portlet kt-portlet--tabs kt-portlet--height-fluid" style="margin-right: 0.3em;max-width: unset;">
                            <div class="kt-portlet__head" style="max-height: 20px;">
                                <div class="kt-portlet__head-label">
                                    <h3 id="" class="kt-portlet__head-title">Project Status</h3>
                                </div>
                            </div>
                            <div class="row pt-2">
                                <div id="projectStatusChart"></div>
                                <div id="projectStatusLables"></div>
                            </div>
                        </div>
                    </div>

                </div>
                <!--End::project dashboard-->
                <!--Begin::contributor dashboard-->
                <div class="tab-pane fade" id="contributor-dashboard" role="tabpanel" aria-labelledby="contributor-dashboard-tab">
                    <!--Begin::Row ProjectContributor-->
                    <div class="row">
                        <div class="col-8 col-auto" id="projectDashbordContributorId" style="margin-right: 0.3em;">
                            <div id="projectContributorId" class="row">
                                <div class="kt-portlet kt-portlet--tabs kt-portlet--height-fluid">
                                    <div class="kt-portlet__head" style="max-height: 20px;">
                                        <div class="kt-portlet__head-label">
                                            <h3 id="" class="kt-portlet__head-title">Waiting on You</h3>
                                        </div>
                                    </div>
                                    <div id="contributorTableContainer" class="kt-portlet__body ">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-3 kt-portlet kt-portlet--tabs " style="margin-right: 0.3em;max-width: unset; display: grid;">


                            <div class="row">
                                <div class="kt-portlet kt-portlet--tabs kt-portlet--height-fluid">
                                    <div class="kt-portlet__head">
                                        <div class="kt-portlet__head-label">
                                            <h3 id="" class="kt-portlet__head-title">Action Required</h3>
                                        </div>
                                    </div>
                                    <div id="actionStatusChartContainer" class="row pt-2">
                                        <div id="actionStatusChart"></div>
                                        <div id="actionStatusLables"></div>
                                    </div>
                                </div>
                            </div>


                        </div>
                    </div>
                    <div class="row">
                        <div class="kt-portlet kt-portlet--tabs kt-portlet--height-fluid" style="margin-right: 0.3em;">
                            <div class="kt-portlet__head">
                                <div class="kt-portlet__head-label">
                                    <h3 id="" class="kt-portlet__head-title">Recent Activities</h3>
                                </div>
                            </div>
                            <div id="recentDocumentsTableContainer" class="row kt-portlet__body">
                                <table id="recentDocumentsTableId"
                                        class="display table table-striped table-bordered table-hover dt-responsive">
                                    <thead>
                                        <tr>
                                            <th class="all">Project</th>
                                            <th>Steps</th>
                                            <th>Last Time</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!--End::Row ProjectContributor-->
                </div>
                <!--End::contributor dashboard-->
            </div>
            <!--Begin::Row Project Status, Action Required, Recent Documents-->
            <div class="row">

            </div>
            <!--End::Row Project Status, Action Required, Recent Documents-->
            <!-- end:: Content -->
        </div>
    </div>
</div>