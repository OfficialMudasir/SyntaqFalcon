<style>

	.OnClickLink {
		cursor: pointer;
		color: #58a3dc !important;
		font-size: small;
	}

    .my-custom-class-0 {
        fill: #5867dd;
        stroke: white;
        stroke-width: 5px;
    }

    .my-custom-class-1 {
        fill: #0033ff;
        stroke: white;
        stroke-width: 5px;
    }

    .my-custom-class-2 {
        fill: #00a6fb;
        stroke: white;
        stroke-width: 5px;
    }
    .my-custom-class-3 {
        fill: #00fff7;
        stroke: white;
        stroke-width: 5px;
    }
    .my-custom-class-4 {
        fill: #00adff;
