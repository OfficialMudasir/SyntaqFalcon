@using System.Threading.Tasks
@using Syntaq.Falcon.Tenants.Dashboard.Dto
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@{
	ViewBag.CurrentPageName = FalconPageNames.Tenant.Dashboard;
}
@section Styles {
	<link rel="stylesheet" abp-href="/lib/morris.js/morris.css" asp-append-version="true" />
	<link rel="stylesheet" abp-href="/view-resources/Areas/Falcon/Views/Dashboard/Index.css" asp-append-version="true" />
	@*<link rel="stylesheet" abp-href="/view-resources/Areas/Falcon/Views/_Bundles/vendors.bundle.css" asp-append-version="true" />*@
}

@section Scripts {
	<script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
	<script src="~/view-resources/Areas/Falcon/Views/Dashboard/Index.js"></script>
	<script src="~/view-resources/Areas/Falcon/Views/_Bundles/chartist.min.js"></script>
	@*<script abp-src="/view-resources/Areas/Falcon/Views/_Bundles/tenant-dashboard-libs.min.js" asp-append-version="true"></script>*@
