@using System.Threading.Tasks
@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@{
    ViewBag.CurrentPageName = FalconPageNames.Host.Editions;
}

@section Styles
{
    <link rel="stylesheet" abp-href="/view-resources/Areas/Falcon/Views/_Bundles/edition-list.css" asp-append-version="true"/>
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/Falcon/Views/_Bundles/edition-list.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("Editions")" description="@L("EditionsHeaderInfo")">
        @if (IsGranted(AppPermissions.Pages_Editions_Create))
        {
            <button id="CreateNewEditionButton" class="btn btn-primary">
                @L("CreateNewEdition")
            </button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card">
                        <div class="card-body">
                            <div class="align-items-center">
                                <table id="EditionsTable" class="table table-hover align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("EditionName")</th>
                                        <th>@L("Price")</th>
                                        <th>@L("IsTrialActive")</th>
                                        <th>@L("WaitingDayAfterExpire")</th>
                                        <th>@L("ExpiringEdition")</th>
                                        <th>@L("Actions")</th>
                                    </tr>
                                    </thead>
                                </table>
                            </div>
        
                        </div>
                    </div>
    </div>
</div>
