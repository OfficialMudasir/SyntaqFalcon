@using Abp.Application.Editions
@using Abp.Extensions
@using Syntaq.Falcon.Web.Areas.Falcon.Models.Common.Modals
@using Syntaq.Falcon.Web.Areas.Falcon.Models.Editions
@model EditEditionModalViewModel

@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditEdition") + ": " + Model.Edition.DisplayName))

<div class="modal-body">

	<ul class="nav nav-tabs nav-tabs-bold nav-tabs nav-tabs-line-right nav-tabs-line-brand mb-2" role="tablist">
		<li class="nav-item" role="presentation">
			<a class="nav-link active" data-bs-toggle="tab" href="#EditionInformationsTab" role="tab" aria-selected="true">
				@L("EditionProperties")
			</a>
		</li>
		<li class="nav-item" role="presentation">
			<a class="nav-link " data-bs-toggle="tab" href="#FeaturesTab" role="tab" aria-selected="true">
				@L("Features")
			</a>
		</li>
	</ul>

	<div class="tab-content">
		<div class="tab-pane  pt-5 active" id="EditionInformationsTab" role="tabpanel">

			<form name="EditionInformationsForm" role="form" novalidate class="form-validation">

				<input type="hidden" name="Id" value="@Model.Edition.Id" />

				<div class="mb-5 ">
					<label for="DisplayName" class="form-label">@L("EditionName")</label>
					<input class="form-control@(Model.Edition.DisplayName.IsNullOrEmpty() ? "" : " edited")"
						   type="text"
						   name="DisplayName"
						   id="DisplayName"
						   value="@Model.Edition.DisplayName"
						   required
						   maxlength="@Edition.MaxDisplayNameLength">
				</div>

			</form>

		</div>
		<div class="tab-pane pt-5" id="FeaturesTab" role="tabpanel">
			@await Html.PartialAsync("~/Areas/Falcon/Views/Common/_FeaturesTree.cshtml", Model)
		</div>
	</div>
</div>

@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
