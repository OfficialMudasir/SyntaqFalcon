@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.EntityVersionHistories
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model EntityVersionHistoriesViewModel
@{
    ViewBag.CurrentPageName = FalconPageNames.Common.EntityVersionHistories;
}
@section Styles
{
    <link rel="stylesheet" abp-href="/assets/json-viewer/jquery.json-viewer.css" asp-append-version="true" />
}
@section Scripts
{
    <script src="~/assets/json-viewer/jquery.json-viewer.js" asp-append-version="true"></script>
    <script src="~/assets/Diff/diff_match_patch.js" asp-append-version="true"></script>
    <script abp-src="/view-resources/Areas/Falcon/Views/EntityVersionHistories/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("TemplateChangeLog")" description="@L("TemplateChangeLogDescription")">
        <button id="ExportToExcelButton" class="btn btn-success">  @L("ExportToExcel")</button>
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">
                            <div class="mb-5 align-items-center">
                                <div class="input-group">
                                    <input type="text" id="EntityVersionHistoriesTableFilter" aria-label="@L("InputFilterText")" class="form-control" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                    <button class="btn btn-secondary" id="clearbtn" aria-label="@L("Clear")" type="button">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <button id="GetEntityVersionHistoriesButton" class="btn btn-primary" type="submit" aria-label="@L("Search")">
                                        <i class="fa fa-search" aria-label="@L("Search")"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                        <div class="col-xl-3">
                            <div class="mb-5">
                                <label for="NameFilterId" class="form-label">@L("Name")</label>
                                <input type="text" class="form-control" name="nameFilter" id="NameFilterId">
                            </div>
                        </div>
                        <div class="col-xl-3">
                            <div class="mb-5">
                                <label for="VersionNameFilterId" class="form-label">@L("VersionName")</label>
                                <input type="text" class="form-control" name="versionNameFilter" id="VersionNameFilterId">
                            </div>
                        </div>
                        <div class="col-xl-3">
                            <div class="mb-5">
                                <label for="DescriptionFilterId" class="form-label">@L("Description")</label>
                                <input type="text" class="form-control" name="descriptionFilter" id="DescriptionFilterId">
                            </div>
                        </div>
                        <div class="col-xl-3">
                            <div class="mb-5">
                                <label for="UserNameFilterId" class="form-label">@L("User") @L("Name")</label>
                                <input type="text" class="form-control" name="userNameFilter" id="UserNameFilterId">
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-xl-12">
                            <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                                <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")
                            </span>
                            <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                                <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="align-items-center">
                    <table id="EntityVersionHistoriesTable" class="table table-hover align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>           
                                <th></th>
                                <th>@L("Name")</th>
                                <th>@L("Live") @L("Version")</th>
                                <th>@L("PreviousVersion")</th>
                                <th>@L("Type")</th>
                                <th>@L("UserName")</th>
                                <th>@L("LastModified")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
