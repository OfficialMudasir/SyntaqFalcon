@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.Files
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model FilesViewModel
@{
	ViewBag.CurrentPageName = FalconPageNames.Common.Files;
}
@section Scripts
{
	<script abp-src="/view-resources/Areas/Falcon/Views/Files/Index.js" asp-append-version="true"></script>
}
<div class="m-subheader">
	<div class="row align-items-center">
		<div class="mr-auto col-sm-12 col-md-6">
			<h3 class="m-subheader__title m-subheader__title--separator">
				<span>@L("Files")</span>
			</h3>
			<span class="m-section__sub">
				@L("FilesHeaderInfo")
			</span>
		</div>
		<div class="col-sm-12 col-md-6 text-right">
			@if (IsGranted(AppPermissions.Pages_Files_Create))
			{
				<button id="CreateNewFileButton" class="btn btn-primary blue">@L("CreateNewFile")</button>
			}
		</div>
	</div>
</div>
<div class="m-content">
	<div class="m-portlet m-portlet--mobile">
		<div class="m-portlet__body">
 
				<div id="AdvacedAuditFiltersArea" style="display: none" class="row m--margin-bottom-10">
					<div class="col-md-12">
						<div class="m-separator m-separator--dashed"></div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label for="RecordRecordNameFilterId">(@L("Record")) @L("RecordName")</label>
							<input type="text" class="form-control" name="recordRecordNameFilter" id="RecordRecordNameFilterId">
						</div>
					</div>
					<div class="col-md-3">
						<div class="form-group">
							<label for="RecordMatterRecordMatterNameFilterId">(@L("RecordMatter")) @L("RecordMatterName")</label>
							<input type="text" class="form-control" name="recordMatterRecordMatterNameFilter" id="RecordMatterRecordMatterNameFilterId">
						</div>
					</div>
				</div>
				<div class="row m--margin-bottom-10">
					<div class="col-xl-12">
						<span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
						<span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
					</div>
				</div>
			<div class="row align-items-center">
				<table id="FilesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
					<thead>
						<tr>
							<th>@L("Actions")</th>
							<th>@L("FileUploadId")</th>
							<th>@L("FileUploads")</th>
							<th>@L("RecordRecordName")</th>
							<th>@L("RecordMatterRecordMatterName")</th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>