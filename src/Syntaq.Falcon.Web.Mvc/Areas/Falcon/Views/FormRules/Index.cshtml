@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.FormRules
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model FormRulesViewModel
@{
	ViewBag.CurrentPageName = FalconPageNames.Common.FormRules;
}
@section Scripts
{
	<script abp-src="/view-resources/Areas/Falcon/Views/FormRules/Index.js" asp-append-version="true"></script>
}
<div class="m-subheader">
	<div class="row align-items-center">
		<div class="mr-auto col-sm-12 col-md-6">
			<h3 class="m-subheader__title m-subheader__title--separator">
				<span>@L("FormRules")</span>
			</h3>
			<span class="m-section__sub">
				@L("FormRulesHeaderInfo")
			</span>
		</div>
		<div class="col-sm-12 col-md-6 text-right">
			@if (IsGranted(AppPermissions.Pages_FormRules_Create))
			{
				<button id="CreateNewFormRuleButton" class="btn btn-primary blue"> @L("CreateNewFormRule")</button>
			}
		</div>
	</div>
</div>
<div class="m-content">
	<div class="m-portlet m-portlet--mobile">
		<div class="m-portlet__body">
			<div class="m-form m-form--label-align-right">
			   <div class="row align-items-center m--margin-bottom-10">
					<div class="col-xl-12">
						<div class="form-group m-form__group align-items-center">
							<div class="input-group">
								<input type="text" id="FormRulesTableFilter" aria-label="@L("InputFilterText")" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
								<span class="input-group-btn">
									<button id="GetFormRulesButton" aria-label="@L("Search")" class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
								</span>
							</div>
						</div>
					</div>
				</div>
			</div>
				<div id="AdvacedAuditFiltersArea" style="display: none" class="row m--margin-bottom-10">
					<div class="col-md-12">
						<div class="m-separator m-separator--dashed"></div>
					</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="RuleFilterId">@L("Rule")</label>
									<input type="text" class="form-control" name="ruleFilter" id="RuleFilterId">
								</div>
							</div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="RuleScriptFilterId">@L("RuleScript")</label>
									<input type="text" class="form-control" name="ruleScriptFilter" id="RuleScriptFilterId">
								</div>
							</div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="FormNameFilterId">(@L("Form")) @L("Name")</label>
									<input type="text" class="form-control" name="formNameFilter" id="FormNameFilterId">
								</div>
							</div>

				</div>
				<div class="row m--margin-bottom-10">
					<div class="col-xl-12">
						<span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
						<span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
					</div>
				</div>
			<div class="row align-items-center">
				<table id="FormRulesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
					<thead>
						<tr>
							<th>@L("Actions")</th>
							<th>@L("Rule")</th>
							<th>@L("RuleScript")</th>
							<th>@L("FormName")</th>
						</tr>
					</thead>
				</table>
			</div>
		</div>
	</div>
</div>