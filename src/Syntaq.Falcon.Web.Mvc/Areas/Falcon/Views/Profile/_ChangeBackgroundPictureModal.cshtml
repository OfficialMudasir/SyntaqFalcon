@using Syntaq.Falcon
@using Syntaq.Falcon.Web.Areas.Falcon.Models.Common.Modals
@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("ChangeProfileBackgroundPicture")))

<div class="modal-body">
	<form id="ChangeProfileBackgroundPictureModalForm" method="POST" action="@(ApplicationPath + "Profile/UploadProfileBackgroundPicture")">
		<div class="form-group">
			<input type="file" name="ProfileBackgroundPicture" />
			<span class="help-block m-b-none">@L("ProfilePicture_Change_Info", AppConsts.MaxProfilPictureBytesUserFriendlyValue)</span>
		</div>
	</form>
	<img alt="" id="ProfileBackgroundPictureResize" src="" />
</div>

@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")