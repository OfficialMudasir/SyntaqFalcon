@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.ProjectDeployments
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model ProjectDeploymentsViewModel
@{
//ViewBag.CurrentPageName = FalconPageNames.Common.ProjectDeployments;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/Falcon/Views/ProjectDeployments/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("ProjectDeployments")' description='@L("ProjectDeploymentsHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_ProjectDeployments_Create))
        {
        <button id="CreateNewProjectDeploymentButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewProjectDeployment")</button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="ProjectDeploymentsTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetProjectDeploymentsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="CommentsFilterId">@L("Comments")</label>
                            <input type="text" class="form-control" name="commentsFilter" id="CommentsFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="ActionTypeFilterId">@L("ActionType")</label>
                        <select class="form-select" name="ActionTypeFilter" id="ActionTypeFilterId">
                            <option value="-1">@L("All")</option>
                            <option value="0">@L("Enum_ProjectDeploymentActionType_0")</option>

                            <option value="1">@L("Enum_ProjectDeploymentActionType_1")</option>

                        </select>
                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="ProjectReleaseNameFilterId">(@L("ProjectRelease")) @L("Name")</label>
                            <input type="text" class="form-control" name="projectReleaseNameFilter" id="ProjectReleaseNameFilterId">
                        </div>
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="ProjectDeploymentsTable2" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Actions")</th>
                                <th>@L("Comments")</th>
                                <th>@L("ActionType")</th>
                                <th>@L("ProjectReleaseName")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>