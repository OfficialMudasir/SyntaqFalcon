
@using Syntaq.Falcon.Web.Areas.Falcon.Models.Common.Modals
@using Syntaq.Falcon.Web.Areas.Falcon.Models.ProjectDeployments
@model ProjectDeploymentViewModel

@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("Details")))

<div class="modal-body">
    <div id="ProjectDeploymentInformationsTab">

        <div class="row">
            <div class="col-6 mb-3">
                <h6>@L("Comments") :</h6>
                @Model.ProjectDeployment.Comments
            </div>
            <div class="col-6 mb-3">
                <h6>@L("ActionType") :</h6>
                @L("Enum_ProjectDeploymentActionType_" + (int)Model.ProjectDeployment.ActionType)
            </div>

            <div class="col-6 mb-3">
                <h6>(@L("ProjectRelease")) @L("Name") :</h6>
                @Model.ProjectReleaseName
            </div>

        </div>

    </div>
</div>

@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalFooterWithClose.cshtml")