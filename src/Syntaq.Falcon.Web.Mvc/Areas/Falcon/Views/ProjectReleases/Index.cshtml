@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.ProjectReleases
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model ProjectReleasesViewModel
@{
ViewBag.CurrentPageName = FalconPageNames.Common.ProjectReleases;
}
@section Scripts
{
<script abp-src="/view-resources/Areas/Falcon/Views/ProjectReleases/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid">

    <abp-page-subheader title='@L("ProjectReleases")' description='@L("ProjectReleasesHeaderInfo")'>
        <button id="ExportToExcelButton" class="btn btn-outline btn-outline-success btn-active-light-success me-1"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>

        @if (IsGranted(AppPermissions.Pages_ProjectReleases_Create))
        {
        <button id="CreateNewProjectReleaseButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewProjectRelease")</button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">

                            <div class="my-3">
                                <div class="input-group">
                                    <input type="text" id="ProjectReleasesTableFilter" class="form-control" placeholder='@L("SearchWithThreeDot")' value="@Model.FilterText">
                                    <button id="GetProjectReleasesButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">

                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="NameFilterId">@L("Name")</label>
                            <input type="text" class="form-control" name="nameFilter" id="NameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="NotesFilterId">@L("Notes")</label>
                            <input type="text" class="form-control" name="notesFilter" id="NotesFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="ProjectIdFilterId">@L("ProjectId")</label>
                            <input type="text" class="form-control" name="projectIdFilter" id="ProjectIdFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="RequiredFilterId">@L("Required")</label>
                        <select class="form-select" name="RequiredFilter" id="RequiredFilterId">
                            <option value="-1">@L("All")</option>
                            <option value="0">@L("False")</option>
                            <option value="1">@L("True")</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinVersionMajorFilterId">@L("MinMax") @L("VersionMajor")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input" placeholder="@L(" MinValue")" name="minVersionMajorFilter" id="MinVersionMajorFilterId" />
                                <input type="number" class="form-control m-input" placeholder="@L(" MaxValue")" name="maxVersionMajorFilter" id="MaxVersionMajorFilterId" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinVersionMinorFilterId">@L("MinMax") @L("VersionMinor")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input" placeholder="@L(" MinValue")" name="minVersionMinorFilter" id="MinVersionMinorFilterId" />
                                <input type="number" class="form-control m-input" placeholder="@L(" MaxValue")" name="maxVersionMinorFilter" id="MaxVersionMinorFilterId" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="MinVersionRevisionFilterId">@L("MinMax") @L("VersionRevision")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input" placeholder="@L(" MinValue")" name="minVersionRevisionFilter" id="MinVersionRevisionFilterId" />
                                <input type="number" class="form-control m-input" placeholder="@L(" MaxValue")" name="maxVersionRevisionFilter" id="MaxVersionRevisionFilterId" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="ReleaseTypeFilterId">@L("ReleaseType")</label>
                        <select class="form-select" name="ReleaseTypeFilter" id="ReleaseTypeFilterId">
                            <option value="-1">@L("All")</option>
                            <option value="0">@L("Enum_ProjectReleaseType_0")</option>

                            <option value="1">@L("Enum_ProjectReleaseType_1")</option>

                            <option value="2">@L("Enum_ProjectReleaseType_2")</option>

                        </select>
                    </div>

                    <div class="col-md-3">
                        <div class="my-3">
                            <label class="form-label" for="ProjectEnvironmentNameFilterId">(@L("ProjectEnvironment")) @L("Name")</label>
                            <input type="text" class="form-control" name="projectEnvironmentNameFilter" id="ProjectEnvironmentNameFilterId">
                        </div>
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="ProjectReleasesTable" class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th></th>

                                <th>@L("Actions")</th>
                                <th>@L("Name")</th>
                                <th>@L("Notes")</th>
                                <th>@L("ProjectId")</th>
                                <th>@L("Required")</th>
                                <th>@L("VersionMajor")</th>
                                <th>@L("VersionMinor")</th>
                                <th>@L("VersionRevision")</th>
                                <th>@L("ReleaseType")</th>
                                <th>@L("ProjectEnvironmentName")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>