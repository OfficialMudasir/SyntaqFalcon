@using Syntaq.Falcon.Projects;
@using Syntaq.Falcon.Web.Areas.Falcon.Models.Projects
@using Syntaq.Falcon.Web.Areas.Falcon.Models.Common.Modals
@model CreateOrEditProjectViewModel

@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("EditProject")) : L("CreateNewForm")))

<div class="modal-body">
    <div id="FormInformationsTab">
        <form name="ProjectInformationsForm" role="form" novalidate class="form-validation">


            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.Project.Id" />
                <input class="form-control" id="Project_RecordId" value="@Model.Project.RecordId" type="text" name="recordId" hidden />
            }
            else
            {
                <input class="form-control" id="Project_RecordId" value="" type="text" name="recordId" hidden />
            }

            <div class="form-group mb-4">
                <label class="form-label" for="Project_Name">@L("Name")</label>
                <input class="form-control" id="Project_Name" value="@Model.Project.Name" type="text" name="name" />
            </div>

            <div class="form-group">
                <label class="form-label" for="Project_Description">@L("Description")</label>
                <textarea rows="6" class="form-control" id="Project_Description" name="description">@Model.Project.Description</textarea>
            </div>

        </form>
    </div>
</div>


@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")
