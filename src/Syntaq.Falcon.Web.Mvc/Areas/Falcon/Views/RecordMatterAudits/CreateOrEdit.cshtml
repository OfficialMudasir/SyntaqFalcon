@using Syntaq.Falcon.Records;
					
@using System.Globalization
@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.RecordMatterAudits
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model CreateOrEditRecordMatterAuditViewModel

@{
    ViewBag.CurrentPageName = FalconPageNames.Common.RecordMatterAudits;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/Falcon/Views/RecordMatterAudits/CreateOrEdit.js" asp-append-version="true"></script>
}
<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor"> 


                <div class="kt-subheader kt-grid__item">
                  <div class="@(await GetContainerClass())">
                    <div class="kt-subheader__main">
                        <h3 class="kt-subheader__title">
                            <span>@(Model.IsEditMode ? (L("EditRecordMatterAudit")) : L("CreateNewRecordMatterAudit"))</span>
                        </h3>
                        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                        <div class="kt-subheader__breadcrumbs">
                            <a href="/Falcon/RecordMatterAudits" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i>&thinsp;@L("RecordMatterAudits")</a>
                            <span class="kt-subheader__breadcrumbs-separator"></span>
                            <a href="javascript:;" class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">
                               @(Model.IsEditMode ? (L("Edit")) : L("Create"))
                            </a>
                        </div>
                    </div>
                  </div>
                </div>
            

<div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <form name="RecordMatterAuditInformationsForm" role="form" novalidate class="form-validation">
            <div class="kt-portlet__body">
                <div class="kt-form">
                     <div id="RecordMatterAuditInformationsTab">   
                            @if (Model.IsEditMode)
                            {
                                <input type="hidden" name="id" value="@Model.RecordMatterAudit.Id" />
                            }

				                        
								<div class="form-group m-form__group">
										<label for="UserName">@L("User")</label>
									    <div class="input-group">
											<input class="form-control" id="UserName" name="userName" value="@Model.UserName" type="text" disabled>
										<div class="input-group-append">
											<button class="btn btn-primary blue" id="OpenUserLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
										</div> 
										<div class="input-group-prepend">
											<button class="btn btn-danger btn-icon" type="button" id="ClearUserNameButton"><i class="fa fa-times"></i></button>
										</div>
									</div>
								</div>

								@if (Model.IsEditMode)
								{
									<input class="form-control" id="RecordMatterAudit_UserId" value="@Model.RecordMatterAudit.UserId" type="text" name="userId"  hidden/>
								}
								 else
								{ 
									<input class="form-control" id="RecordMatterAudit_UserId" value="" type="text" name="userId"  hidden/>
								}

            
								<div class="form-group m-form__group">
										<label for="RecordMatterRecordMatterName">@L("RecordMatter")</label>
									    <div class="input-group">
											<input class="form-control" id="RecordMatterRecordMatterName" name="recordMatterRecordMatterName" value="@Model.RecordMatterRecordMatterName" type="text" disabled>
										<div class="input-group-append">
											<button class="btn btn-primary blue" id="OpenRecordMatterLookupTableButton" type="button"><i class="fa fa-search"></i> @L("Pick")</button>
										</div> 
										<div class="input-group-prepend">
											<button class="btn btn-danger btn-icon" type="button" id="ClearRecordMatterRecordMatterNameButton"><i class="fa fa-times"></i></button>
										</div>
									</div>
								</div>

								@if (Model.IsEditMode)
								{
									<input class="form-control" id="RecordMatterAudit_RecordMatterId" value="@Model.RecordMatterAudit.RecordMatterId" type="text" name="recordMatterId"  hidden/>
								}
								 else
								{ 
									<input class="form-control" id="RecordMatterAudit_RecordMatterId" value="" type="text" name="recordMatterId"  hidden/>
								}



				            
								@{
					var selectListStatus = Html.GetEnumSelectList(typeof(Syntaq.Falcon.Records.RecordMatterConsts.RecordMatterStatus));
					 foreach (var selectOption in selectListStatus) { selectOption.Text = L("Enum_RecordMatterStatus_" + selectOption.Value); }
					}
								<div class="form-group m-form__group">
									<label for="RecordMatterAudit_Status">@L("Status")</label>
										<select class="form-control m-input m-input--square" name="status" id="RecordMatterAudit_Status" asp-for="@Model.RecordMatterAudit.Status" asp-items="@selectListStatus" >
									</select>
								</div>
					
								<div class="form-group">
									<label for="RecordMatterAudit_Data">@L("Data")</label>
									<input class="form-control" id="RecordMatterAudit_Data" value="@Model.RecordMatterAudit.Data" type="text" name="data"   maxlength="@Syntaq.Falcon.Records.RecordMatterAuditConsts.MaxDataLength"  minlength="@Syntaq.Falcon.Records.RecordMatterAuditConsts.MinDataLength"  />
								</div>
					                   
                    </div>
			    </div>            
            </div>
            <div class="kt-portlet__foot">
			    <div class="row align-items-center">
				    <div class="col-lg-12">
					    <button type="button" id="saveBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("Save")</button>
					    @if (!Model.IsEditMode)
                        {
					        <button type="button" id="saveAndNewBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("SaveAndNew")</button>
					    }
				    </div>
			    </div>
		    </div>
         </form>
    </div>
  </div>
</div>