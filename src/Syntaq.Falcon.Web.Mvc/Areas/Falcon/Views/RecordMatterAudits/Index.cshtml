@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.RecordMatterAudits
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model RecordMatterAuditsViewModel
@{
    ViewBag.CurrentPageName = FalconPageNames.Common.RecordMatterAudits;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/Falcon/Views/RecordMatterAudits/Index.js" asp-append-version="true"></script>
}
<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">


                <div class="kt-subheader kt-grid__item">
                  <div class="@(await GetContainerClass())">
                    <div class="kt-subheader__main">
                        <h3 class="kt-subheader__title">
                            <span>@L("RecordMatterAudits")</span>
                        </h3>
                        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                        <span class="kt-subheader__desc">
                            @L("RecordMatterAuditsHeaderInfo")
                        </span>
                    </div>
                    <div class="kt-subheader__toolbar">
                        <div class="kt-subheader__wrapper">
                            <button id="ExportToExcelButton" class="btn btn-success"> @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_RecordMatterAudits_Create))
                            {
                                <a href="\Falcon\RecordMatterAudits\CreateOrEdit" class="btn btn-primary blue"> @L("CreateNewRecordMatterAudit")</a>                
                            }
                        </div>
                    </div>
                  </div>
                </div>
            
<div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">   
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="RecordMatterAuditsTableFilter" aria-label="@L("InputFilterText")" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <button class="btn btn-secondary" id="clearbtn" aria-label="@L("Clear")" type="button">
                                    <i class="fas fa-times"></i>
                                </button>
                                <span class="input-group-btn">
                                    <button id="GetRecordMatterAuditsButton" aria-label="@L("Search")" class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

							<div class="col-md-3">
								<label for="StatusFilterId">@L("Status")</label>
								<select class="form-control" name="StatusFilter" id="StatusFilterId">
								<option value="-1">@L("All")</option>
																			<option value="0">@L("Enum_RecordMatterStatus_0")</option>

										<option value="1">@L("Enum_RecordMatterStatus_1")</option>

										<option value="2">@L("Enum_RecordMatterStatus_2")</option>

										<option value="3">@L("Enum_RecordMatterStatus_3")</option>


								</select>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="DataFilterId">@L("Data")</label>
									<input type="text" class="form-control" name="dataFilter" id="DataFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="UserNameFilterId">(@L("User")) @L("Name")</label>
									<input type="text" class="form-control" name="userNameFilter" id="UserNameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="RecordMatterRecordMatterNameFilterId">(@L("RecordMatter")) @L("RecordMatterName")</label>
									<input type="text" class="form-control" name="recordMatterRecordMatterNameFilter" id="RecordMatterRecordMatterNameFilterId">
								</div>
                            </div>
                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="RecordMatterAuditsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th></th>
                            
                            <th>@L("Actions")</th>
								<th>@L("Status")</th>
								<th>@L("Data")</th>
								<th>@L("UserName")</th>
								<th>@L("RecordMatterRecordMatterName")</th>
                            
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>