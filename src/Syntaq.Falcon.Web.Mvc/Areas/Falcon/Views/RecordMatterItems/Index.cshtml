@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.RecordMatterItems
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model RecordMatterItemsViewModel
@{
    ViewBag.CurrentPageName = FalconPageNames.Tenant.RecordMatterItems;
}
@section Scripts
{
    <script src="/view-resources/Areas/Falcon/Views/RecordMatterItems/Index.js" asp-append-version="true"></script>
}
<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("RecordMatterItems")</span>
            </h3>
            <span class="m-section__sub">
                @L("RecordMatterItemsHeaderInfo")
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            @if (IsGranted(AppPermissions.Pages_RecordMatterItems_Create))
            {
                <button id="CreateNewRecordMatterItemButton" class="btn btn-primary blue"> @L("CreateNewRecordMatterItem")</button>
            }
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
			<div class="m-form m-form--label-align-right">
			   <div class="row align-items-center m--margin-bottom-10">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                <input type="text" id="RecordMatterItemsTableFilter" aria-label="@L("InputFilterText")" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetRecordMatterItemsButton" aria-label="@L("Search")" class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row m--margin-bottom-10">
                    <div class="col-md-12">
						<div class="m-separator m-separator--dashed"></div>
					</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="DocumentFilterId">@L("Document")</label>
									<input type="text" class="form-control" name="documentFilter" id="DocumentFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="DocumentNameFilterId">@L("DocumentName")</label>
									<input type="text" class="form-control" name="documentNameFilter" id="DocumentNameFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="RecordMatterTenantIdFilterId">(@L("RecordMatter")) @L("TenantId")</label>
									<input type="text" class="form-control" name="recordMatterTenantIdFilter" id="RecordMatterTenantIdFilterId">
								</div>
                            </div>

                </div>
                <div class="row m--margin-bottom-10">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="RecordMatterItemsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
								<th>@L("Document")</th>
								<th>@L("DocumentName")</th>
								<th>@L("RecordMatterTenantId")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>