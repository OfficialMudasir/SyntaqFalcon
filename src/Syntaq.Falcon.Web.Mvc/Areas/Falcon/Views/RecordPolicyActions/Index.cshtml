@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.RecordPolicyActions
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model RecordPolicyActionsViewModel
@{
    ViewBag.CurrentPageName = FalconPageNames.Common.RecordPolicyActions;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/Falcon/Views/RecordPolicyActions/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("RecordPolicyActions")" description="@L("RecordPolicyActionsHeaderInfo")">
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">
                            <div class="mb-5 align-items-center">
                                <div class="input-group">
                                    <input type="text" id="RecordPolicyActionsTableFilter" aria-label="@L("InputFilterText")" class="form-control" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                    <button class="btn btn-secondary" id="clearbtn" aria-label="@L("Clear")" type="button">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <button id="GetRecordPolicyActionsButton" class="btn btn-primary" type="submit" aria-label="@L("Search")">
                                        <span class="fa fa-search" aria-label="@L("Search")"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                        <div class="col-xl-3">
                            <div class="mb-5">
                                <label for="NameFilterId" class="form-label">@L("Name")</label>
                                <input type="text" class="form-control" name="nameFilter" id="NameFilterId">
                            </div>
                        </div>
                        <div class="col-xl-3">
                            <div class="mb-5">
                                <label for="MinExpiryFilterId" class="form-label">@L("MinMax") @L("ExpireDays")</label>
                                <div class="input-group">
                                    <input class="form-control kt-input date-picker" type="text" placeholder="@L("MinValue")" name="minExpireDaysFilter" id="MinExpiryFilterId">
                                    <input class="form-control kt-input date-picker" type="text" placeholder="@L("MaxValue")" name="maxExpireDaysFilter" id="MaxExpiryFilterId">
                                </div>
                            </div>
                        </div>

                        <div class="col-xl-3">
                            <div class="mb-5">
                                <label for="ActiveFilterId" class="form-label">@L("Active")</label>
                                <select class="form-control" name="ActiveFilter" id="ActiveFilterId">
                                    <option value="-1">@L("All")</option>
                                    <option value="0">@L("False")</option>
                                    <option value="1">@L("True")</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-xl-3">
                            <div class="mb-5">
                                <label for="RecordPolicyNameFilterId" class="form-label">@L("RecordPolicy") @L("Name")</label>
                                <input type="text" class="form-control" name="recordPolicyNameFilter" id="RecordPolicyNameFilterId">
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-xl-12">
                            <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                                <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")
                            </span>
                            <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                                <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="align-items-center">
                    <table id="RecordPolicyActionsTable" class="table align-middle table-hover table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th>@L("Name")</th>
                                <th>@L("AppliedTenant")</th>
                                <th>@L("ExpireDays")</th>
                                <th>@L("Type")</th>
                                <th>@L("RecordStatus")</th>
                                <th>@L("Active")</th>
                                <th style="width:5%">@L("Actions")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
