@using Syntaq.Falcon.Web.Resources
<link href="~/metronic/themes/default/css/pages/wizard/wizard-5.css" rel="stylesheet" />
@inject IWebResourceManager WebResourceManager
@{
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Falcon/Views/_Bundles/morris.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Falcon/Views/_Bundles/raphael.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Falcon/Views/_Bundles/jquery.flot.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Falcon/Views/_Bundles/jquery.waypoints.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Falcon/Views/_Bundles/jquery.counterup.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Falcon/Views/_Bundles/topojson.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Falcon/Views/_Bundles/jquery.easypiechart.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Areas/Falcon/Views/_Bundles/chartist.min.js");
}


<div id="ProjectRecentDocumentsWidgetId" class="card card-custom bgi-no-repeat card-stretch gutter-b new-subscription-statistics h-100 ProjectRecentDocumentsContainer" @*style="height:100%"*@>
    <div class="card-header align-items-center">
        <div class="d-flex align-items-center">
            <h3 class="card-title align-items-start flex-column">
                <span class="font-weight-bolder text-dark">@L("RecentActivities")</span>
            </h3>
            <div class="tooltip-new d-inline-block">
                <i class="fas fa-question-circle"></i>
                <div class="tooltip-inner-new">
                    <caption>@L("RecentActivityTableCaption")</caption>
                </div>
            </div>
        </div>
        <div class="card-toolbar">

            <div class="dropdown me-2">
                <button class="btn btn-sm btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="envLbl">@L("All")</span><span class="EnvId d-none"></span>
                </button>
                <div id="PrdEnvContent" class="dropdown-menu p-3" aria-labelledby="dropdownMenuButton">
                </div>
            </div>

            <button id="refreshProjectRecentDocumentsButton" aria-label="Refresh" class="btn  btn-sm btn-secondary ProjectRecentDocumentsButton">
                <span class="fa fa-sync"></span>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="recentDocumentsTableContainer">
        </div>

    </div>
</div>