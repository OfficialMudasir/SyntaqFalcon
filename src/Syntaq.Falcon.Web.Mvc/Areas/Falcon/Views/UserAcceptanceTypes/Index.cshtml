@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.UserAcceptanceTypes
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model UserAcceptanceTypesViewModel
@{
    ViewBag.CurrentPageName = FalconPageNames.Host.UserAcceptanceTypes;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/Falcon/Views/UserAcceptanceTypes/Index.js" asp-append-version="true"></script>
}
 

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("UserAcceptanceTypes")" description="@L("UserAcceptanceTypesHeaderInfo")">
                    <button id="ExportToExcelButton" class="btn btn-success">  @L("ExportToExcel")</button>
                    @if (IsGranted(AppPermissions.Pages_UserAcceptances_Delete) && AbpSession.TenantId == null)
                    {
                        <button id="CreateNewUserAcceptanceTypeButton" class="btn btn-primary">@L("CreateNewUserAcceptanceType")</button>
                    }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">
                            <div class="mb-5 align-items-center">
                                <div class="input-group">
                                    <input type="text" id="UserAcceptanceTypesTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                    <button class="btn btn-secondary" id="clearbtn" aria-label="@L("Clear")" type="button">
                                        <span class="fas fa-times"></span>
                                    </button>
                                    <button id="GetUserAcceptanceTypesButton" class="btn btn-primary" type="submit">
                                        <span class="fa fa-search" aria-label="@L("Search")"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                        <div class="col-md-12">
                            <div class="m-separator m-separator--dashed"></div>
                        </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="NameFilterId">@L("Name")</label>
                            <input type="text" class="form-control" name="nameFilter" id="NameFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label for="ActiveFilterId">@L("Active")</label>
                        <select class="form-control" name="ActiveFilter" id="ActiveFilterId">
                            <option value="-1">@L("All")</option>
                            <option value="0">@L("False")</option>
                            <option value="1">@L("True")</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="TemplateNameFilterId">@L("TemplateName")</label>
                            <input type="text" class="form-control" name="templateNameFilter" id="TemplateNameFilterId">
                        </div>
                    </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-xl-12">
                            <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                                <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")
                            </span>
                            <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                                <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="align-items-center">
                    <table id="UserAcceptanceTypesTable" class="table table-hover align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                
                                <th>@L("Name")</th>
                                <th>@L("Active")</th>
                                <th>@L("TemplateName")</th>   
                                <th class="all" style="width:5%;">@L("Actions")</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
