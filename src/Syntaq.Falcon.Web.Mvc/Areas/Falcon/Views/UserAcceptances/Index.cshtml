@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.UserAcceptances
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model UserAcceptancesViewModel
@{
    ViewBag.CurrentPageName = FalconPageNames.Common.UserAcceptances;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/Falcon/Views/UserAcceptances/Index.js" asp-append-version="true"></script>
 
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("UserAcceptances")" description="@L("UserAcceptancesHeaderInfo")">
                    <button id="ExportToExcelButton" class="btn btn-success">  @L("ExportToExcel")</button>
                    @if (IsGranted(AppPermissions.Pages_UserAcceptances_Delete) && AbpSession.TenantId == null)
                    {
                        <button id="deleteSelectedAcceptedUsers" class="btn btn-primary">@L("ClearUserAcceptances")</button>
                    }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card">
            <div class="card-body">
                <div class="form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">
                            <div class="mb-5 align-items-center">
                                <div class="input-group">
                                    <input aria-label="Search Filter" type="text" id="UserAcceptancesTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                    <button class="btn btn-secondary" id="clearbtn" aria-label="@L("Clear")" type="button">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <button id="GetUserAcceptancesButton" class="btn btn-primary" type="submit" aria-label="@L("Search")">
                                        <i class="fa fa-search" aria-label="@L("Search")"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                       <div class="col-md-12">
                            <div class="m-separator m-separator--dashed"></div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="tenantNameFilter">@L("TenancyName")</label>
                                <input type="text" class="form-control" name="tenantNameFilter" id="tenantNameFilter">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="userNameFilter">@L("UserName")</label>
                                <input type="text" class="form-control" name="userNameFilter" id="userNameFilter">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="userFirstNameFilter">@L("Name")</label>
                                <input type="text" class="form-control" name="userFirstNameFilter" id="userFirstNameFilter">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="userSurnameFilter">@L("Surname")</label>
                                <input type="text" class="form-control" name="userSurnameFilter" id="userSurnameFilter">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="userEmailFilter">@L("Email")</label>
                                <input type="text" class="form-control" name="userEmailFilter" id="userEmailFilter">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="userAcceptanceTypeNameFilterId">@L("Type")</label>
                                <input type="text" class="form-control" name="userAcceptanceTypeNameFilter" id="userAcceptanceTypeNameFilterId">
                            </div>
                        </div>
                    </div>
                    <div class="row mb-4">
                        <div class="col-xl-12">
                            <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                                <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")
                            </span>
                            <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                                <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")
                            </span>
                        </div>
                    </div>
                </div>
                <div class="align-items-center">
                    <table id="UserAcceptancesTable" class="table table-hover align-middle table-row-dashed fs-6 gy-5 dataTable no-footer">
                        <thead>
                            <tr>
                                <th><div class='text-center'><input type="checkbox" aria-label="Select" id="chkToggle"" /></div></th>
                                <th>@L("TenantName")</th>
                                <th>@L("Username")</th>
                                <th>@L("Name")</th>
                                <th>@L("Email")</th>
                                <th>@L("Type")</th>
                                <th>@L("Time")</th>       
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
