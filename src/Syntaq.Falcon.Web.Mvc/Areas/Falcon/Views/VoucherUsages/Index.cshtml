@using Syntaq.Falcon.Authorization
@using Syntaq.Falcon.Web.Areas.Falcon.Models.VoucherUsages
@using Syntaq.Falcon.Web.Areas.Falcon.Startup
@model VoucherUsagesViewModel
@{
    ViewBag.CurrentPageName = FalconPageNames.Common.VoucherUsages;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/Falcon/Views/VoucherUsages/Index.js" asp-append-version="true"></script>
}
<div class="m-subheader">
    <div class="row align-items-center">
        <div class="mr-auto col-sm-12 col-md-6">
            <h3 class="m-subheader__title m-subheader__title--separator">
                <span>@L("VoucherUsages")</span>
            </h3>
            <span class="m-section__sub">
                @L("VoucherUsagesHeaderInfo")
            </span>
        </div>
        <div class="col-sm-12 col-md-6 text-right">
            <button id="ExportToExcelButton" class="btn btn-success">  @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_VoucherUsages_Create))
            {
                <button id="CreateNewVoucherUsageButton" class="btn btn-primary blue"> @L("CreateNewVoucherUsage")</button>
            }
        </div>
    </div>
</div>
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
			<div class="m-form m-form--label-align-right">
			   <div class="row align-items-center m--margin-bottom-10">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                <input type="text" id="VoucherUsagesTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetVoucherUsagesButton" class="btn btn-primary" type="submit"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row m--margin-bottom-10">
                    <div class="col-md-12">
						<div class="m-separator m-separator--dashed"></div>
					</div>

                            <div class="col-md-3">
                                    <div class="form-group">
										<label for="MinDateRedeemedFilterId">@L("MinMax") @L("DateRedeemed")</label>
										<div class="input-group">
											<input class="form-control m-input date-picker" type="text" placeholder="@L("MinValue")"  id="MinDateRedeemedFilterId">
											<input class="form-control m-input date-picker" type="text" placeholder="@L("MaxValue")"  id="MaxDateRedeemedFilterId">
										</div>
									</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="EntityKeyFilterId">@L("EntityKey")</label>
									<input type="text" class="form-control" name="entityKeyFilter" id="EntityKeyFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="EntityTypeFilterId">@L("EntityType")</label>
									<input type="text" class="form-control" name="entityTypeFilter" id="EntityTypeFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="UserNameFilterId">(@L("User")) @L("Name")</label>
									<input type="text" class="form-control" name="userNameFilter" id="UserNameFilterId">
								</div>
                            </div>

                </div>
                <div class="row m--margin-bottom-10">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="VoucherUsagesTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
								<th>@L("DateRedeemed")</th>
								<th>@L("EntityKey")</th>
								<th>@L("EntityType")</th>
								<th>@L("UserName")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>