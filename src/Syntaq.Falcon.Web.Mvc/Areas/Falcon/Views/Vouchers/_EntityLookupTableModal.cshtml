@using Syntaq.Falcon.Web.Areas.Falcon.Models.Vouchers
@using Syntaq.Falcon.Web.Areas.Falcon.Models.Common.Modals
@model EntityLookupTableViewModel

@section Scripts
    {
    <script abp-src="/view-resources/Areas/Falcon/Views/Vouchers/_EntityLookupTableModal.js" asp-append-version="true"></script>
}

@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("PickEntity"))) 

<div class="modal-body">
<div class="m-content">
    <div class="m-portlet m-portlet--mobile">
        <div class="m-portlet__body">
            <div class="m-form m-form--label-align-right">
                <div class="row align-items-center m--margin-bottom-10">
                    <div class="col-xl-12">
                        <div class="form-group m-form__group align-items-center">
                            <div class="input-group">
                                <input type="text" id="EntityTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                   @* <button id="GetEntityButton" 
                                            class="btn btn-outline-primary m-btn m-btn--custom OpenEntityLookupTableButton" 
                                            type="submit">*@
                                    <button id="GetEntityButton" 
                                            class="btn btn-primary m-btn m-btn--custom OpenEntityLookupTableButton" 
                                            type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="  align-items-center">
                <table id="EntityTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("EntityName")</th>
                            @*<th>@L("RecordName")</th>*@
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
</div>

@await Html.PartialAsync("~/Areas/Falcon/Views/Common/Modals/_ModalFooterWithClose.cshtml")
