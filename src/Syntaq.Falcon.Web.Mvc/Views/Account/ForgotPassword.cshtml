@using Abp.Authorization.Users
@using Syntaq.Falcon.Localization
@section Scripts
{
    <script abp-src="/view-resources/Views/Account/ForgotPassword.js" asp-append-version="true"></script>
}
@section Styles{
    <link href="/metronic/common/css/login-1@(CultureHelper.IsRtl ? ".rtl":"").css" rel="stylesheet" />
}

@*STQ MODIFIED TODO REFACTOR*@

<div class="login-form">
    <div class="pb-13 pt-lg-0 pt-5">
    	<h3 class="font-weight-bolder text-dark font-size-h4 font-size-h1-lg">@L("ForgotPassword")</h3>
    </div>
    <form class="form forget-form" asp-action="SendPasswordResetLink" method="post">
        <p>
            @L("SendPasswordResetLink_Information")
        </p>
        <div class="mb-5">
            <input class="form-control placeholder-no-fix form-control-solid h-auto py-7 px-6 rounded-lg font-size-h6" type="email" autocomplete="new-password" placeholder="@L("EmailAddress")" name="EmailAddress" required maxlength="@AbpUserBase.MaxEmailAddressLength" />
        </div>
        <div class="pb-lg-0 pb-5 pull-right">
            <button type="submit" class="btn btn-primary me-2">@L("Submit")</button>
            <a asp-action="Login">
                <button type="button" id="back-btn" class="btn btn-secondary font-weight-bold">@L("Back")</button>
            </a>

        </div>
    </form>
</div>
